<Window
    x:Class="RadianTools.UI.Avalonia.Sample.Views.MainWindow"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:RadianTools.UI.Avalonia.Controls;assembly=RadianTools.UI.Avalonia"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:RadianTools.UI.Avalonia.Sample.ViewModels"
    Title="RadianTools.UI.Avalonia.Sample"
    Width="450"
    Height="400"
    d:DesignHeight="450"
    d:DesignWidth="400"
    x:DataType="vm:MainWindowViewModel"
    Icon="/Assets/avalonia-logo.ico"
    mc:Ignorable="d">

    <Design.DataContext>
        <vm:MainWindowViewModel />
    </Design.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <controls:FolderTreeView Grid.Row="0" SelectedTreePath="{Binding SelectedTreePath, Mode=TwoWay}" />

        <TextBox
            Grid.Row="1"
            Margin="0,10,0,0"
            Text="{Binding SelectedTreePath}" />
    </Grid>

</Window>
